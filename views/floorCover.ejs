<%- include('includes/header')%>

<div class="container">
    <h1 class="display-4 text-center py-1">Cost to cover floor</h1>
    
    <div>
      <form action="/" method="GET">
      <button class="btn btn-primary">Back to Home</button>
      </form>
    </div>

    <div class="jumbotron p-3 shadow-sm">
      <form action="/floorCover" method="POST">
        <div class="d-flex align-items-center">
            <label for="floor-width">Width (m)</label>
            <input autofocus autocomplete="off" name="floor-width"class="form-control mr-3" type="number" step="0.01" style="flex: 1;">
            <label for="floor-height">Height (m)</label>
            <input autocomplete="off" name="floor-height"class="form-control mr-3" type="number" step="0.01" style="flex: 1;">
            <label for="tile-cost">Tile-Cost (sq m)</label>
            <input autocomplete="off" name="tile-cost"class="form-control mr-3" type="number" step="0.01" style="flex: 1;">
            <button class="btn btn-primary">Compute</button>
        </div>
      </form>

      <div class="container">
        <% if (result) { %>
          <div> Output:  <%= result%></div>
        <% } %>
      </div>
    </div>
    
   
    
  </div>