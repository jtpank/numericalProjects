<%- include('includes/header')%>

<div class="container">
    <h1 class="display-4 text-center py-1">Cost to cover floor</h1>
    
    <div>
      <form action="/" method="GET">
      <button class="btn btn-primary">Back to Home</button>
      </form>
    </div>

    <div class="jumbotron p-3 shadow-sm">
      <form action="/coinFlip" method="POST">
        <div class="d-flex align-items-center">
            <label>Flip coin: </label> 
            <button class="btn btn-primary">Compute</button>
        </div>
        </form>
        <form action="/coinFlip" method="GET">
          <div class="d-flex align-items-center">
              <button class="btn btn-primary">Reset</button>
          </div>
        </form>

      <div class="container">
        <% if (result) { %>
          <div> Last flip:  <%= result%></div>
        <% } else { %>
          <div> Last flip: Not yet flipped</div>
          <% } %>
      </div>
      <div class="container">
        <% if (tCount) { %>
          <div> Tails Count:  <%= tCount%></div>
        <% } else { %>
          <div> Tails Count:  0</div>
          <% } %>
      </div>
      <div class="container">
        <% if (hCount) { %>
          <div> Heads Count:  <%= hCount%></div>
        <% } else { %>
          <div> Heads Count:  0</div>
          <% } %>
      </div>
    </div>
    
    
   
    
  </div>